<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6fa"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ادیتور حرفه‌ای متن"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etText"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="متن خود را وارد کنید..."
            android:gravity="top|right"
            android:background="@drawable/edittext_bg"
            android:textSize="22sp"
            android:textColor="#222"
            android:layout_marginBottom="14dp"
            android:maxLines="5"
            android:minLines="3"
            android:padding="12dp"
            android:inputType="textMultiLine|textCapSentences"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnTextColor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="رنگ متن" />

            <Button
                android:id="@+id/btnBgColor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="پس‌زمینه" 
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnTransparentBg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="متن بدون پس‌زمینه"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <Spinner
                android:id="@+id/spinnerFont"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvFontSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اندازه فونت: 26"
                android:textColor="#444"
                android:textSize="16sp"
                android:layout_gravity="center"/>

            <SeekBar
                android:id="@+id/seekFontSize"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:max="64"
                android:progress="26"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_bg"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/btnSaveImage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:text="ذخیره به عنوان تصویر"
            android:textSize="18sp"
            android:background="@color/purple_200"
            android:textColor="#fff"
            android:elevation="2dp"/>
    </LinearLayout>
</ScrollView>
